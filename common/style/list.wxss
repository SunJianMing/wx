/* pages/index/index.wxss */
page{
  height: 100%;
}
.list-item{
  width:100%;
  box-sizing: border-box;
  padding: 0 20rpx;
  overflow: hidden;
  display: flex;
  justify-content: space-between;
}
.movies-item{
  flex:0 0 49%;
}
.movies-item .poster{
  width: 100%;
}
.movies-item .title{
  font-size:28rpx;
  text-align:center;
  color:#333;
  margin: 5rpx 0;
}
.movies-item .title .rate{
  color:#f00;
}
.movies-item .info{
  font-size: 20rpx;
  text-align: center;
  color:#888;
  margin-bottom:20rpx;
}
.loading{
  text-align: center;
  height: 80rpx;
}
.loading image{
  height: 100%;
}